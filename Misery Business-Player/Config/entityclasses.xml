<configs>

	<!-- Player -->
	<!-- 		-->
	
	<!-- Random -->
	<remove xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@value='@_vehicleFood']"/>

	<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='HealthChangeOT']/@value">0.01</set>
	<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='DismemberChance']/@value">0</set>
	<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='DegradationPerUse']/@operation">perc_add</set>
	<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='DegradationPerUse']/@value">.5</set>
	<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='CarryCapacity']/@value">18</set>
	<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='PlayerExpGain']/@value">3</set>
	
	<!-- Speed -->
	<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='WalkSpeed']/@value">1.22</set>
	<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='RunSpeed']/@value">0.88</set>
	<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='CrouchSpeed']/@value">0.832</set>
	
	<!-- Stamina -->
	<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='StaminaChangeOT' and @operation='base_set']/@value">8</set>
	<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='StaminaChangeOT' and @tags='running']/@value">-1.6</set>
	<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='StaminaChangeOT' and @tags='floating']/@value">-0.5</set>
	<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='StaminaChangeOT' and @tags='swimming']/@value">-1.3</set>
	<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='StaminaChangeOT']/requirement[@progression_name='perkGreatHeistSprintSneak']/../@value">1</set>
	
	<!-- Water/Food -->
	<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='WaterLossPerHealthPointGained']/@value">0.1</set>
	<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='WaterChangeOT']/@value">0.015</set>
	<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='FoodChangeOT']/@value">0.011</set>
	<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='FoodLossPerStaminaPointGained']/@value">0.005</set>
	
